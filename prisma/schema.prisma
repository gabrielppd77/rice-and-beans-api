// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  email    String @unique @db.VarChar(55)
  name     String @db.VarChar(55)
  password String @db.VarChar(255)
  phone    String @db.VarChar(11)

  company Company?

  @@map("users")
}

model Company {
  id String @id

  name        String  @db.VarChar(55)
  phone       String? @db.VarChar(11)
  description String? @db.VarChar(255)

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  @@map("companies")
}

model Category {
  id String @id

  name             String  @db.VarChar(55)
  photoUrl         String? @db.VarChar(55)
  categoryParentId String?

  categoryParent Category?  @relation("CategoryParents", fields: [categoryParentId], references: [id], onDelete: Cascade)
  categories     Category[] @relation("CategoryParents")

  products Product[]

  @@map("categories")
}

model Product {
  id String @id

  categoryId  String
  name        String  @db.VarChar(55)
  price       Decimal
  photoUrl    String? @db.VarChar(55)
  description String? @db.VarChar(255)

  category Category @relation(fields: [categoryId], references: [id])

  @@map("products")
}
